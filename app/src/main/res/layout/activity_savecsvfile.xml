<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="CSV存檔"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textAlignment="center"
        android:id="@+id/tvsaveCSV" />


    <Button
        android:id="@+id/btnSave"
        android:text="存檔"
        android:textSize="28sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:layout_marginTop="118dp"
        android:layout_below="@+id/tvsaveCSV"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etFileName"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/tvsaveCSV"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp" />

    <TextView
        android:id="@+id/prefTest"
        android:text="HIHI"
        android:textSize="30sp"
        android:layout_below="@+id/btnSave"
        android:layout_marginLeft="160dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="@string/csvFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etFileName"
        android:layout_alignBottom="@+id/etFileName"
        android:layout_toLeftOf="@+id/etFileName"
        android:layout_toStartOf="@+id/etFileName"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:textStyle="normal|bold"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/gotoFileList"
        android:text="前往檔案列表"
        android:textSize="28sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/btnSave"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/getData"
        android:text="@string/getData"
        android:layout_width="wrap_content"
        android:layout_below="@+id/gotoFileList"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />
</RelativeLayout>