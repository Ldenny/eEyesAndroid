<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.idv.napchen.asynctest.MainActivity"
    android:background="@drawable/andro1080x1920_empty">


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnExoprt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="255dp"
        android:id="@+id/listView" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnChartSetting"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="118dp"
        android:background="@drawable/button_charting_150x150" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnExoprt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginTop="118dp"
        android:background="@drawable/button_export_150x150" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnSetting"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginTop="318dp"
        android:background="@drawable/button_setting_150x150" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnAlarm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="318dp"
        android:background="@drawable/button_alarm_150x150" />


</RelativeLayout>
